<div id="background">
<div id="navItems">
  <a href="/"> Home Screen</a> 
  <a href="/customers/new">Add a New Customer</a>
</div>



<h2>Customer info: </h2>
<ul>
<% customers.forEach(function(customer) { %>
  <li>
    <p><strong> <%= customer.firstName %> <%= customer.lastName %> - <%= customer.phone %> </strong>
      <% customer.locations.forEach(location => { %> 
        <%= location.address %> </p> 
        <% }) %> 
      <a href="/customers/edit/<%= customer.id %>">Edit customer</a>
        <form method="POST" action="/customers/<%= customer.id%>?_method=DELETE">
        <input type="submit" value="Delete">
        </form>
        </li>
<% }) %>
      </ul>
    </div>
